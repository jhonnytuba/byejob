{
  "manifest_version": 2,

  "name": "Bye Job",
  "description": "Bye Job",
  "version": "3.2.3",

  "permissions": [
	"http://api.openweathermap.org/", "geolocation", "notifications", "activeTab"
  ],

  "browser_action": {
    "default_icon": "img/logo_byejob_19.png",
    "default_popup": "html/byejob.html"
  },

  "icons": { "16": "img/logo_byejob_19.png",
             "48": "img/logo_byejob_48.png",
             "128": "img/logo_byejob_128.png"
  },
  
  "web_accessible_resources": [
    "img/notification/notification_bey_job.png",
    "img/notification/notification_ok.png"
  ],
  
  "background":{
  	"scripts":["js/moment-with-locales.min.js", "js/notification.js"]
  }
}